<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:paddingBottom="@dimen/dimens_16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_article"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:src="@drawable/placeholder_news"
        app:layout_constraintTop_toBottomOf="@+id/txt_published" />


    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_article" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shap_gradient"
        android:gravity="bottom"
        android:padding="@dimen/dimens_16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16sp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_article"
        app:layout_constraintTop_toBottomOf="@+id/txt_published" />

    <TextView
        android:id="@+id/txt_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/ripple_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_published"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/ripple_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>