<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_key_word_title"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Please select keyword"
        android:textAlignment="textStart"
        android:textColor="#474747"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/chip_group_key_words"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_key_words"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:singleSelection="true"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Email"
        android:textAlignment="textStart"
        android:textColor="#474747"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/edt_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="jhone@gmail.com"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/btn_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--<com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        android:layout_width="256dp"
        android:layout_height="44dp"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Register"
        android:onClick="onClickRegisterButton"
        android:textColor="@color/white"
        android:them="@style/AppTheme.MaterialButtonRed1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        style="@style/MaterialButtonRed1"
        android:layout_width="256dp"
        android:layout_height="65dp"
        android:paddingStart="@dimen/dimens_16dp"
        android:paddingEnd="@dimen/dimens_16dp"
        android:layout_marginBottom="120dp"
        android:text="Register"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>